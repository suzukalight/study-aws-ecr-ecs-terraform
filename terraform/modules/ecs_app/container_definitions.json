[
  {
    "name": "nginx",
    "image": "${account_id}.dkr.ecr.${region}.amazonaws.com/${project_name}-nginx:${tag}",
    "cpu": 256,
    "memory": 512,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80,
        "protocol": "tcp"
      }
    ],
    "dependsOn": [
      {
        "containerName": "backend",
        "condition": "START"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "${region}",
        "awslogs-group": "/${name}/ecs",
        "awslogs-stream-prefix": "nginx"
      }
    }
  },
  {
    "name": "backend",
    "image": "${account_id}.dkr.ecr.${region}.amazonaws.com/${project_name}-backend:${tag}",
    "cpu": 256,
    "memory": 512,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 23456
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "${region}",
        "awslogs-group": "/${name}/ecs",
        "awslogs-stream-prefix": "backend"
      }
    },
    "environment": [
      {
        "name": "DB_HOST",
        "value": "${db_host}"
      },
      {
        "name": "DB_DATABASE",
        "value": "${db_database}"
      },
      {
        "name": "DB_USERNAME",
        "value": "${db_username}"
      },
      {
        "name": "DB_PASSWORD",
        "value": "${db_password}"
      },
      {
        "name": "SERVER_PORT",
        "value": "${server_port}"
      },
      {
        "name": "JWT_SECRET",
        "value": "${jwt_secret}"
      },
      {
        "name": "JWT_EXPIRES_IN",
        "value": "${jwt_expires_in}"
      }
    ]
  }
]
